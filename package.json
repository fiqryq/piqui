{
  "version": "0.5.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "workspaces": {
    "docs": [
      "docs/*"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "docs": "cd docs && yarn run start",
    "docs:build": "cd docs && yarn run build",
    "test": "tsdx test --passWithNoTests",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@fiqryq/piqui",
  "author": "fiqryq",
  "module": "dist/piqui.esm.js",
  "size-limit": [
    {
      "path": "dist/piqui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/piqui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  },
  "repository": {
    "url": "git://github.com/fiqryq/piqui.git"
  }
}
